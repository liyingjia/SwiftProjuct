# platform :ios, '9.0'

target 'SwiftTestDemo' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!
  pod 'Alamofire' #http网络请求事件处理的框架。
  pod 'Moya'     #这是一个基于Alamofire的更高层网络请求封装抽象层。
  pod 'SwiftyJSON'
  pod 'Reachability'  #用来检查应用当前的网络连接状况。
  pod 'SnapKit' #自动布局框架，类似于Masonry。
  pod 'Koloda' #卡片视图，而且滑动视图有滑动卡片一样的动画效果
  pod 'ImagePicker' #图片选择器
  pod 'RAMAnimatedTabBarController' #同样的Ramotion出品，提供适合的Tab Bar
  pod 'SCLAlertView' #不错的一款alert view
  pod 'ActiveLabel' #支持Hashtags、Mentions、Links响应事件处理
  pod 'TextFieldEffects' #具有非常多、非常nice的输入框视图
  pod 'PhoneNumberKit' #专门针对电话号码格式做的一个输入框，很赞
  pod 'Hue','~> 5.0.0' #集成color功用的库，使用的是hex颜色值
#  pod 'HanekeSwift' #轻量带缓存高性能图片加载组件
  pod 'Kingfisher' #写的一款关于图片下载、缓存的框架，灵感取自于SDWebImage
  pod 'ESTabBarController-swift'
  pod 'NVActivityIndicatorView' #很多漂亮的加载指示器。
#  pod 'DGElasticPullToRefresh' #有弹性效果的下拉刷新控件。
  pod 'WRNavigationBar' #,'~>1.2.0’
  pod 'Moya'
  pod 'SVProgressHUD'
  pod 'LLCycleScrollView'
  pod 'SDWebImage'
  pod 'MJRefresh'
  pod 'WMZDropDownMenu'

  # Pods for SwiftTestDemo

#  target 'SwiftTestDemoTests' do
